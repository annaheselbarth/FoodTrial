<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Food Trial Helper</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <div class="navbar navbar-expand-lg fixed-top navbar-dark navbarScroll">
        <div class="container">

           
            <nav class="navbar navbar-dark primary-color">
                <div class="container-fluid">
                <a class="navbar-brand" href="~/Home/Index">
                    <img src="~/Content/Images/Food Trial Helper Logo.png" height="125" alt="logo">
                </a>
                    </div>
            </nav>

            @*<hr class="my-5">*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Foods", "Index", "Food")</li>

                        <li>@Html.ActionLink("Trials", "Index", "Trial")</li>
                        <li>@Html.ActionLink("Medicines", "Index", "Medicine")</li>

                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            

        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        
        
         
                <footer>
                    <br />
                    <br />
                    <br />
                    <ul>
                        <li>How to do a Food Trial</li>
                        <li>Additional Resources</li>
                        <li>Disclaimer</li>
                    </ul>
                    <br />
                    <br /><br />
                    <center><p>&copy; @DateTime.Now.Year - Food Trial Application</p></center>
                </footer>
            
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
